<mujoco model="simple_car_track">
    <compiler angle="radian" coordinate="local" inertiafromgeom="true"/>
    <option timestep="0.02" gravity="0 0 -9.81"/>
    
    <worldbody>
        <!-- Ground plane -->
        <geom name="ground" type="plane" size="100 100 1" pos="0 0 0" rgba="0.9 0.9 0.9 1"/>
        
        <!-- Simple oval track boundaries (outer and inner walls as boxes) -->
        <!-- Outer walls -->
        <geom name="outer_left" type="box" pos="-30 0 2.5" size="2 42.5 2.5" rgba="0.5 0.5 0.5 1"/>
        <geom name="outer_right" type="box" pos="30 0 2.5" size="2 42.5 2.5" rgba="0.5 0.5 0.5 1"/>
        <geom name="outer_top" type="box" pos="0 42.5 2.5" size="32 2 2.5" rgba="0.5 0.5 0.5 1"/>
        <geom name="outer_bottom" type="box" pos="0 -42.5 2.5" size="32 2 2.5" rgba="0.5 0.5 0.5 1"/>
        
        <!-- Inner walls (smaller oval) -->
        <geom name="inner_left" type="box" pos="-20 0 2.5" size="1.5 27.5 2.5" rgba="0.5 0.5 0.5 1"/>
        <geom name="inner_right" type="box" pos="20 0 2.5" size="1.5 27.5 2.5" rgba="0.5 0.5 0.5 1"/>
        <geom name="inner_top" type="box" pos="0 27.5 2.5" size="21.5 1.5 2.5" rgba="0.5 0.5 0.5 1"/>
        <geom name="inner_bottom" type="box" pos="0 -27.5 2.5" size="21.5 1.5 2.5" rgba="0.5 0.5 0.5 1"/>
        
        <!-- Car body -->
        <body name="car" pos="0 -35 0.5">
            <joint type="free" name="car_joint" damping="0.1"/>
            <geom name="car_body" type="box" size="0.6 1.0 0.3" mass="200" friction="0.5 0.005 0.0001" rgba="1 0 0 1"/>
            <!-- Actuators will be applied via code -->
        </body>
        
        <!-- Following camera -->
        <camera name="follow_cam" mode="track" target="car" pos="0 -50 10" fovy="60"/>
    </worldbody>
    
    <actuator>
        <!-- No actuators in XML; applied programmatically -->
    </actuator>
</mujoco>
