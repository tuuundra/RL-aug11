<mujoco model="simple_car_track">
    <compiler angle="radian" coordinate="local" inertiafromgeom="true"/>
    <visual>
        <global offwidth="1920" offheight="1080"/>
    </visual>
    <option timestep="0.02" gravity="0 0 -9.81"/>
    
    <worldbody>
        <!-- Ground plane -->
        <geom name="ground" type="plane" size="100 100 1" pos="0 0 0" rgba="1 1 1 1"/>

        <!-- Track Visuals: A gray outer oval with a white inner oval on top -->
        <geom name="track_outer" type="ellipsoid" pos="0 0 0.01" size="64 34 0.01" rgba="0.3 0.3 0.3 1" contype="0" conaffinity="0"/>
        <geom name="track_inner" type="ellipsoid" pos="0 0 0.02" size="56 26 0.01" rgba="1 1 1 1" contype="0" conaffinity="0"/>
        
        <!-- Car body -->
        <body name="car" pos="0 -35 0.5">
            <joint type="free" name="car_joint" damping="0.1"/>
            <geom name="car_body" type="box" size="0.6 1.0 0.3" mass="200" friction="0.5 0.005 0.0001" rgba="1 0 0 1"/>
            <!-- Actuators will be applied via code -->
        </body>
        
        <!-- Following camera -->
        <camera name="birds_eye" mode="fixed" pos="0 0 60" fovy="90"/>
    </worldbody>
    
    <actuator>
        <!-- No actuators in XML; applied programmatically -->
    </actuator>
</mujoco>
